{
  "version": 2,
  "outputDirectory": "client/dist",
  "framework": "vite",
  "installCommand": "npm ci --prefer-offline --no-audit --prefix client",
  "devCommand": "cd client && npm run dev",
  "rewrites": [
    {
      "source": "/((?!api|_next|static|favicon.ico|manifest.json|robots.txt).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "functions": {
    "client/dist/**": {
      "maxDuration": 30
    }
  },
  "regions": ["iad1"],
  "buildCommand": "cd client && npm ci --prefer-offline --no-audit --ignore-scripts && npm run build"
}