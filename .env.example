# Replay Environment Variables Template
# Copy this file to .env and fill in your values

# === CLIENT ENVIRONMENT VARIABLES ===
# These should be set in client/.env for local development
# and in Vercel dashboard for production

# Supabase Configuration (Client)
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# API Configuration (Client)
VITE_API_URL=http://localhost:3001  # Local development
# VITE_API_URL=https://replay-production-a5ab.up.railway.app  # Production

# === SERVER ENVIRONMENT VARIABLES ===
# These should be set in server/.env for local development
# and in Railway dashboard for production

# Server Configuration
NODE_ENV=development  # development | production
PORT=3001

# Supabase Configuration (Server)
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# AI Services
GEMINI_API_KEY=your_google_gemini_api_key
OPENAI_API_KEY=your_openai_api_key
REPLICATE_API_TOKEN=your_replicate_api_token

# === DEPLOYMENT SECRETS ===
# These should be set in GitHub Secrets for CI/CD

# Vercel Deployment
VERCEL_TOKEN=your_vercel_token
VERCEL_ORG_ID=your_vercel_org_id
VERCEL_PROJECT_ID=your_vercel_project_id

# Railway Deployment
RAILWAY_TOKEN=your_railway_token
RAILWAY_SERVICE_ID=your_railway_service_id