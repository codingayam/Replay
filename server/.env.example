# Environment Variables Template
# Copy this file to .env and fill in your actual secrets. Never commit populated files.

# Google Gemini AI API Key
GEMINI_API_KEY=your_gemini_api_key_here

# Replicate API Token (for Text-to-Speech)
REPLICATE_API_TOKEN=your_replicate_api_token_here

# Resend Email Configuration (weekly reports)
RESEND_API_KEY=your_resend_api_key_here
WEEKLY_REPORT_FROM_EMAIL="Replay Weekly <weekly@example.com>"

# Supabase Configuration
SUPABASE_ACCESS_TOKEN=your_supabase_access_token_here
SUPABASE_PROJECT_REF=your_supabase_project_ref_here
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Server Configuration
PORT=3001

# OneSignal Configuration
ONESIGNAL_APP_ID=your_onesignal_app_id_here
ONESIGNAL_REST_API_KEY=your_onesignal_rest_api_key_here
ONESIGNAL_CUSTOM_EVENTS=false
