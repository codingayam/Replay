# Environment Variables Template
# Copy this file to .env and fill in your actual secrets. Never commit populated files.

# Google Gemini AI API Key
GEMINI_API_KEY=your_gemini_api_key_here

# Replicate API Token (for Text-to-Speech)
REPLICATE_API_TOKEN=your_replicate_api_token_here

# Supabase Configuration
SUPABASE_ACCESS_TOKEN=your_supabase_access_token_here
SUPABASE_PROJECT_REF=your_supabase_project_ref_here
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Firebase Admin / Server-Side Messaging
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=your_firebase_service_account_client_email
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n"
FCM_SERVER_KEY=your_fcm_server_key

# Web Push (VAPID)
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key

# Apple Push Notifications (APNs) for Web Push
APNS_TEAM_ID=your_team_id
APNS_KEY_ID=your_apns_key_id
APNS_KEY="-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n"
APNS_WEB_PUSH_ID=web.com.replay.app

# Server Configuration
PORT=3001
